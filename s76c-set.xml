<PropertyList>

    <sim>
        <description>Sikorsky S76C++</description>
        <author>Syd Adams(Model), Maik Justus (FDM)</author>
        <flight-model>yasim</flight-model>
        <aero>S76c</aero>
        <fuel-fraction>0.5</fuel-fraction>

        <startup>
            <splash-texture>Aircraft/Sikorsky-76C/splash.rgb</splash-texture>
        </startup>

        <model>
            <path>Aircraft/Sikorsky-76C/Models/s76c.xml</path>
            <start-idling type="bool"></start-idling>
            <variant type="int">1</variant>
        </model>

        <hud>
            <enable3d>false</enable3d>
        </hud>

        <systems>
            <electrical>
                <path></path>
            </electrical>
            <autopilot>
            <path>Aircraft/Sikorsky-76C/S76C-autopilot.xml</path>
        </autopilot>
        </systems>

        <instrumentation>
            <path>Aircraft/Sikorsky-76C/instrumentation.xml</path>
        </instrumentation>

        <sound>
            <path>Aircraft/Sikorsky-76C/Sound/s76c-sound.xml</path>
        </sound>

        <virtual-cockpit archive="y">true</virtual-cockpit>
        <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

        <view>
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y">0.45</x-offset-m>
                <y-offset-m archive="y">-1.05</y-offset-m>
                <z-offset-m archive="y">-2.05</z-offset-m>
                <pitch-offset-deg>-16</pitch-offset-deg>
                <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
            </config>
        </view>

    <view n="1">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
            <target-z-offset-m archive="y" type="double">-1</target-z-offset-m>
            <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        </config>
    </view>
        
    <view n="2">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
            <target-z-offset-m archive="y" type="double">-1</target-z-offset-m>
            <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        </config>
    </view>
    
    <view n="3">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
            <target-z-offset-m archive="y" type="double">-1</target-z-offset-m>
            <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        </config>
    </view>
        
    <view n="4">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
            <target-z-offset-m archive="y" type="double">-1</target-z-offset-m>
            <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        </config>
    </view>
        
    <view n="5">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
            <target-z-offset-m archive="y" type="double">-1</target-z-offset-m>
            <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        </config>
    </view>
        
    <view n="6">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
            <target-z-offset-m archive="y" type="double">-1</target-z-offset-m>
            <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
        </config>
    </view>

    <view n="100">
        <name>Panel View</name>
        <type>lookfrom</type>
        <internal type="bool">true</internal>
        <config>
            <from-model type="bool">true</from-model>
            <from-model-idx type="int">0</from-model-idx>
            <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
            <default-field-of-view-deg type="double">30.0</default-field-of-view-deg>
            <default-pitch-deg type="double">0</default-pitch-deg>
            <default-heading-deg type="double">0</default-heading-deg>
            <front-direction-deg type="double">0</front-direction-deg>
            <front-left-direction-deg type="double">45</front-left-direction-deg>
            <left-direction-deg type="double">90</left-direction-deg>
            <back-left-direction-deg type="double">135</back-left-direction-deg>
            <back-direction-deg type="double">180</back-direction-deg>
            <back-right-direction-deg type="double">225</back-right-direction-deg>
            <right-direction-deg type="double">270</right-direction-deg>
            <front-right-direction-deg type="double">315</front-right-direction-deg>
            <x-offset-m archive="y">0.45</x-offset-m>
            <y-offset-m archive="y">-1.05</y-offset-m>
            <z-offset-m archive="y">-2.05</z-offset-m>
            <heading-offset-deg>8.4</heading-offset-deg>
            <pitch-offset-deg>-28</pitch-offset-deg>
        </config>
    </view>

        <chase-distance-m type="double" archive="y">-25.0</chase-distance-m>
<!--  11,700 Max Gross Weight-->
        <weight n="0">
            <name>Crew</name>
            <weight-lb>400</weight-lb>
            <max-lb>500</max-lb>
            <min-lb>160</min-lb>
        </weight>

        <weight n="1">
            <name>Payload</name>
            <weight-lb>1000</weight-lb>
            <max-lb>3500</max-lb>
            <min-lb>0</min-lb>
        </weight>

        <help>
            <title>Sikorsky S-76C+</title>
            <line></line>
            <key>
                <name>o</name>
                <desc>lock aerotow-hook</desc>
            </key>
            <key>
                <name>O</name>
                <desc>open aerotow-hook</desc>
            </key>
        </help>

        <hitches>
            <aerotow>
                <tow>
                    <length type="float">100</length>
                    <elastic-constant type="float">10000</elastic-constant>
                    <weight-per-m-kg-m type="float">1</weight-per-m-kg-m>
                    <dist type="float">1</dist>
                    <connected-to-property-node type="bool"></connected-to-property-node>
                    <brake-force type="float">100000</brake-force>
                    <connected-to-ai-or-mp-callsign type ="string">*</connected-to-ai-or-mp-callsign>
                    <end-force-x type ="float">0</end-force-x>
                    <end-force-y type ="float">0</end-force-y>
                    <end-force-z type ="float">0</end-force-z>
                </tow>
                <speed-in-tow-direction type="float">0</speed-in-tow-direction>
                <open type="bool">true</open>
                <local-pos-x type="float">0</local-pos-x>
                <local-pos-y type="float">0</local-pos-y>
                <local-pos-z type="float">0</local-pos-z>
                <is-slave type="bool">false</is-slave>
            </aerotow>
        </hitches>

    <menubar>
        <default>
            <menu n="10">
                <label>S76C++</label>
                <enabled type="bool">true</enabled>
                <item>
                    <label>Autostart</label>
                    <binding>
                        <command>property-toggle</command>
                        <property>sim/model/start-idling</property>
                    </binding>
                </item>
                <item>
                    <label>Select Livery</label>
                    <binding>
                        <command>nasal</command>
                        <script>aircraft.livery.dialog.toggle()</script>
                    </binding>
                </item>
            </menu>
        </default>
    </menubar>

    </sim>

    <engines>
        <engine>
            <rpm>500</rpm>
            <running type="bool">false</running>
        </engine>
    </engines>

    <controls>
        <engines>
            <engine>
                <throttle>1.0</throttle>
            </engine>
        </engines>
        <flight>
            <aileron-trim>0</aileron-trim>
            <elevator-trim>0</elevator-trim>
        </flight>
        <gear>
            <brake-parking>1</brake-parking>
        </gear>
        <aerotow>
            <find-aircraft type="bool">true</find-aircraft>
        </aerotow>
        <rotor>
            <pitch>1</pitch>
        </rotor>
        <lighting>
        <instruments-norm type="double">0.8</instruments-norm>
        <instrument-lights type="double">1</instrument-lights>
        <cabin-lights type="double">1</cabin-lights>
        </lighting>
    </controls>

    <input>
        <keyboard>
            <key n="123">
                <name>{</name>
                <desc>Shutdown Engines</desc>
                <binding>
                    <command>property-assign</command>
                    <property>/engines/engine/running</property>
                    <value>false</value>
                </binding>
            </key>

            <key n="125">
                <name>}</name>
                <desc>Start Engines</desc>
                <binding>
                    <command>property-assign</command>
                    <property>/engines/engine/running</property>
                    <value>true</value>
                </binding>
            </key>

            <key n="79">
                <name>O</name>
                <desc>Open aerotow hook</desc>
                <binding>
                    <command>property-assign</command>
                    <property>/sim/hitches/aerotow/open</property>
                    <value type="bool">true</value>
                </binding>
            </key>
            <key n="111">
                <name>o</name>
                <desc>Lock aerotow hook</desc>
                <binding>
                    <command>property-assign</command>
                    <property>/sim/hitches/aerotow/open</property>
                    <value type="bool">false</value>
                </binding>
            </key>
        </keyboard>
    </input>

    <instrumentation>
        <radar>
            <serviceable type="bool" archive="y">true</serviceable>
            <switch type="string" archive="y">off</switch>
            <mode-control type="int" archive="y">3</mode-control>
            <range type="int" archive="y">20</range>
            <mode type="string" archive="y">WX</mode>
            <heading-marker type="bool"	archive="y">false</heading-marker>
            <lightning type="bool" archive="y">false</lightning>
            <display-mode type="string">arc</display-mode>
            <radar-texture-path type="string" archive="y">Aircraft/Instruments/Textures/od_wxradar.rgb</radar-texture-path>
            <echo-texture-path type="string" archive="y">Aircraft/Instruments/Textures/wxecho.rgb</echo-texture-path>
            <display-controls>
                <WX type="bool" archive="y">false</WX>
                <data type="bool" archive="y">false</data>
                <pos type="bool" archive="y">true</pos>
            </display-controls>
        </radar>
    </instrumentation>

    <nasal>
        <S-76C>
            <file>Aircraft/Sikorsky-76C/Nasal/Electrical.nas</file>
            <file>Aircraft/Sikorsky-76C/Nasal/flightdirector.nas</file>
            <file>Aircraft/Sikorsky-76C/Nasal/RTU4200.nas</file>
            <file>Aircraft/Sikorsky-76C/Nasal/S76C.nas</file>
            <file>Aircraft/Instruments-3d/clock/M877/M877.nas</file>
            <file>Aircraft/Instruments-3d/RDR-160/RDR160.nas</file>
        </S-76C>
    </nasal>

</PropertyList>