<PropertyList>

    <sim>
        <description>Sikorsky S76C++</description>
        <author>Syd Adams(Model), Maik Justus (FDM) and hacks from the LAKE OF CONTANCE HANGAR</author>
        <flight-model>yasim</flight-model>
		<version>0.0.1</version>
        <aero>S76c</aero>
        <fuel-fraction>0.5</fuel-fraction>

        <startup>
            <splash-texture>Aircraft/Sikorsky-76C/splash.png</splash-texture>
        </startup>

        <model>
            <path>Aircraft/Sikorsky-76C/Models/s76c.xml</path>
            <livery>
                <file type="string">Black</file>
            </livery>
            <start-idling type="bool"></start-idling>
        </model>

		<remote>
			<pilot-callsign type="string"/>
		</remote>

        <systems>
            <electrical>
                <path></path>
            </electrical>
            <autopilot>
            	<path>Aircraft/Sikorsky-76C/Systems/autopilot.xml</path>
        	</autopilot>
        </systems>

        <instrumentation>
            <path>Aircraft/Sikorsky-76C/Systems/instrumentation.xml</path>
        </instrumentation>

        <sound>
            <path>Aircraft/Sikorsky-76C/Sound/s76c-sound.xml</path>
        </sound>

        <virtual-cockpit archive="y">true</virtual-cockpit>
        <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>
		
		<flight-recorder include="Systems/flightrecorder.xml"/>
		
		<!-- Multiplay -->
		<multiplay n="0">
			<chat_display>1</chat_display>
			<generic n="0">         
				<float n="0" alias="/controls/doors/LB-door/position-norm"/>
				<float n="1" alias="/controls/doors/RB-door/position-norm"/>
				<float n="2" alias="/controls/doors/RR-door/position-norm"/>
				<float n="3" alias="/controls/doors/LR-door/position-norm"/>
				<float n="4" alias="/controls/doors/LF-door/position-norm"/>
				<float n="5" alias="/controls/doors/RF-door/position-norm"/>
				<float n="6" alias="/gear/gear[0]/compression-m"/>
				<float n="7" alias="/gear/gear[1]/compression-m"/>
				<float n="8" alias="/gear/gear[2]/compression-m"/>
			</generic>
	    </multiplay>

        <view>
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y">0.45</x-offset-m>
                <y-offset-m archive="y">-1.0</y-offset-m>
                <z-offset-m archive="y">-1.8</z-offset-m>
                <pitch-offset-deg>-13</pitch-offset-deg>
                <limits>
                    <enabled type="bool">true</enabled>
                    <left>
                        <heading-max-deg type="double">120</heading-max-deg>
                        <x-offset-max-m type="double">0.22</x-offset-max-m>
                        <x-offset-threshold-deg type="double">45</x-offset-threshold-deg>
                    </left>
                    <right>
                        <heading-max-deg type="double">140</heading-max-deg>
                        <x-offset-max-m type="double">0.25</x-offset-max-m>
                        <x-offset-threshold-deg type="double">65</x-offset-threshold-deg>
                    </right>
                </limits>
            </config>
        </view>

    <view n="1">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
        </config>
    </view>

    <view n="2">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
        </config>
    </view>
    
    <view n="3">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
        </config>
    </view>
        
    <view n="4">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
        </config>
    </view>
        
    <view n="5">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
        </config>
    </view>
        
    <view n="6">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
        </config>
    </view>

    <view n="7">
        <config>
            <target-y-offset-m archive="y" type="double">-1.5</target-y-offset-m>
        </config>
    </view>

    <view n="101">
        <name>Panel View</name>
        <type>lookfrom</type>
        <internal type="bool">true</internal>
        <config>
            <from-model type="bool">true</from-model>
            <from-model-idx type="int">0</from-model-idx>
            <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
            <default-field-of-view-deg type="double">30.0</default-field-of-view-deg>
            <x-offset-m archive="y">0.45</x-offset-m>
            <y-offset-m archive="y">-1.05</y-offset-m>
            <z-offset-m archive="y">-1.9</z-offset-m>
            <heading-offset-deg>8.4</heading-offset-deg>
            <pitch-offset-deg>-28</pitch-offset-deg>
            <default-heading-offset-deg>8.4</default-heading-offset-deg>
            <default-pitch-offset-deg>-28</default-pitch-offset-deg>
        </config>
    </view>

  <view n="100">
    <name>Passenger View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <heading-offset-deg type="double">180</heading-offset-deg>
      <x-offset-m archive="y" type="double">-0.60 </x-offset-m> <!--Right-->
      <y-offset-m archive="y" type="double">-1.16 </y-offset-m> <!--Up-->
      <z-offset-m archive="y" type="double">-1.3 </z-offset-m> <!--Back-->
      <default-heading-offset-deg>180</default-heading-offset-deg>
      <pitch-offset-deg>-5</pitch-offset-deg>
      <dynamic-view type="bool">true</dynamic-view>
    </config>
    </view>

        <chase-distance-m type="double" archive="y">-25.0</chase-distance-m>

    <airport>
        <runways>
            <start-offset-m>30</start-offset-m>
        </runways>
    </airport>

<!--  11,700 Max Gross Weight-->
        <weight n="0">
            <name>Crew</name>
            <weight-lb>400</weight-lb>
            <max-lb>500</max-lb>
            <min-lb>160</min-lb>
        </weight>

        <weight n="1">
            <name>Payload</name>
            <weight-lb>2000</weight-lb>
            <max-lb>3500</max-lb>
            <min-lb>0</min-lb>
        </weight>

        <help>
            <title>Sikorsky S-76C+</title>
            <line></line>
            <key>
                <name>o</name>
                <desc>lock aerotow-hook</desc>
            </key>
            <key>
                <name>O</name>
                <desc>open aerotow-hook</desc>
            </key>		
			<key>
				<name>></name>
				<desc>toggle Pilot - Panel view</desc>
			</key>
	        <key>
	          <name>1</name>
	          <desc>trim to zero</desc>
	        </key>
	        <key>
	          <name>2</name>
	          <desc>trim for startup</desc>
	        </key>
			<key>
			  <name>F6</name>
			  <desc>toggle AP1/FD1</desc>
			</key>
			<key>
			  <name>F7</name>
			  <desc>open Map</desc>
			</key>
			<key>
			  <name>F9</name>
			  <desc>open Fuel &amp; Weight Menu</desc>
			</key>
        </help>

        <hitches>
            <aerotow>
                <tow>
                    <length type="float">100</length>
                    <elastic-constant type="float">10000</elastic-constant>
                    <weight-per-m-kg-m type="float">1</weight-per-m-kg-m>
                    <dist type="float">1</dist>
                    <connected-to-property-node type="bool"></connected-to-property-node>
                    <brake-force type="float">100000</brake-force>
                    <connected-to-ai-or-mp-callsign type ="string">*</connected-to-ai-or-mp-callsign>
                    <end-force-x type ="float">0</end-force-x>
                    <end-force-y type ="float">0</end-force-y>
                    <end-force-z type ="float">0</end-force-z>
                </tow>
                <speed-in-tow-direction type="float">0</speed-in-tow-direction>
                <open type="bool">true</open>
                <local-pos-x type="float">0</local-pos-x>
                <local-pos-y type="float">0</local-pos-y>
                <local-pos-z type="float">0</local-pos-z>
                <is-slave type="bool">false</is-slave>
            </aerotow>
        </hitches>

    <menubar>
        <default>
            <menu n="10">
                <label>S76C++</label>
                <enabled type="bool">true</enabled>
                <item>
                    <label>Autostart</label>
                    <binding>
                        <command>property-toggle</command>
                        <property>sim/model/start-idling</property>
                    </binding>
                </item>
                <item>
                    <label>Select Livery</label>
                    <binding>
                        <command>nasal</command>
                        <script>aircraft.livery.dialog.toggle()</script>
                    </binding>
                </item>				
	            <item>
	              <label>A/C Registration</label>
	              <binding>
	                <command>nasal</command>
	                <script><![CDATA[ 
	                  s76c.registrationDialog.toggle();
	                ]]></script>
	              </binding>
	            </item>
				<item>
					<label>Select MP-Copilot</label>
					<binding>
						<command>nasal</command>
						<script>
						dual_control_tools.copilot_dialog.show(aircraft_dual_control.copilot_type);
						</script>
					</binding>
				</item>
            </menu>
        </default>
    </menubar>

    </sim>
	
	<autopilot n="0">
		<locks n="0">
			<collective type="bool">0</collective>
			<couple type="bool">0</couple>
		</locks>
		<switches n="0">
			<dme type="bool">1</dme>
		</switches>
	</autopilot>

    <engines>
        <engine>
            <rpm>500</rpm>
            <running type="bool">false</running>
            <filter>0.2</filter>
        </engine>
        <engine n="1">
            <rpm>500</rpm>
            <running type="bool">false</running>
            <filter>0.2</filter>
        </engine>
    </engines>

    <controls>
        <engines>
            <engine>
                <throttle>1.0</throttle>
            </engine>
        </engines>
        <gear>
            <brake-parking>1</brake-parking>
        </gear>
        <aerotow>
            <find-aircraft type="bool">true</find-aircraft>
        </aerotow>
        <rotor>
            <pitch type="double">-0.5</pitch>
	    <roll type="double">0</roll>
	    <yaw type="double">0</yaw>
	    <brake>0</brake>
	         <reltarget>1</reltarget>
       <maxreltorque>1</maxreltorque>
        </rotor>
        <lighting>
        <instruments-norm type="double">0.8</instruments-norm>
        <instrument-lights type="double">1</instrument-lights>
        <cabin-lights type="double">1</cabin-lights>
        </lighting>
    </controls>

<consumables>
    <fuel>
        <tank n="0">
            <name>LH Tank</name>
            <empty type="bool">0</empty>
            <kill-when-empty type="bool">0</kill-when-empty>
            <capacity-gal_us>140</capacity-gal_us>
            <level-lbs>500</level-lbs>
        </tank>
        <tank n="1">
            <name>RH Tank</name>
            <empty type="bool">0</empty>
            <kill-when-empty type="bool">0</kill-when-empty>
            <capacity-gal_us>140</capacity-gal_us>
            <level-lbs>500</level-lbs>
        </tank>
    </fuel>
</consumables>

<input>
	<keyboard include="Systems/keyboard.xml"/>
</input>

    <instrumentation>
		<!-- Flightgear Rallye Watch  -->
		<frw>
			<running type="bool">0</running>
			<btn-mode type="bool">0</btn-mode>
			<btn-reset type="bool">0</btn-reset>
			<btn-start-stop type="bool">0</btn-start-stop>
			<flight-time>
				<start-time type="double">0</start-time>
				<accu type="double">0</accu>
				<total type="double">0</total>
				<hours type="int">0</hours>
				<minutes type="int">0</minutes>
				<seconds type="int">0</seconds>
			</flight-time>
		</frw>
        <tcas>
            <serviceable type="bool">true</serviceable>
            <inputs>
                <mode type="int">3</mode>       <!-- 0=off, 1=standby, 2=TA-only, 3=auto(TA/RA) -->
            </inputs>
            <speaker>
                <max-dist>2</max-dist>
                <reference-dist>1</reference-dist>
                <volume>1.0</volume>
            </speaker>
        </tcas>
        <gsdi>
            <serviceable type="bool">true</serviceable>
            <on type="bool">false</on>
        </gsdi>
        <radar>
            <switch type="string" >off</switch>
            <switch-pos type="int">0</switch-pos>
            <mode-control type="int" >1</mode-control>
            <display-controls>
                <WX type="bool" >false</WX>
                <pos type="bool" >true</pos>
                <data type="bool" >false</data>
                <centre type="bool" >true</centre>
				<symbol type="bool" >true</symbol>
                <tcas type="bool" >true</tcas>
            </display-controls>
            <serviceable type="bool">true</serviceable>
            <range type="int" >10</range>
            <reference-range-nm type="double" >20</reference-range-nm>
            <mode type="string" >WX</mode>
            <font>
                <tcas>
                   <color n="0"> <!-- distant targets -->
                       <red type="float">0</red>
                       <green type="float">1</green>
                       <blue type="float">1</blue>
                   </color>
                   <color n="1"> <!-- proximity targets -->
                       <red type="float">0</red>
                       <green type="float">1</green>
                       <blue type="float">1</blue>
                   </color>
                   <color n="2"> <!-- TA threat targets -->
                       <red type="float">1</red>
                       <green type="float">0.5</green>
                       <blue type="float">0</blue>
                   </color>
                   <color n="3"> <!-- RA threat targets -->
                       <red type="float">1</red>
                       <green type="float">0</green>
                       <blue type="float">0</blue>
                   </color>
               </tcas>
            </font>
            <lightning type="bool" >false</lightning>
            <display-mode type="string" >map</display-mode>
            <radar-texture-path type="string">Aircraft/Sikorsky-76C/Models/Instruments/tcas-2.png</radar-texture-path>
            <echo-texture-path type="string" >Aircraft/Sikorsky-76C/Models/Instruments/wxecho.png</echo-texture-path>
            <minimized type="bool" >false</minimized>
            <heading-marker type="bool" >true</heading-marker>
            <limit-deg type="int">180</limit-deg>
        </radar>
	<standby-altimeter>
		<serviceable type="bool">1</serviceable>
	</standby-altimeter>
	<encoder>
		<serviceable type="bool">1</serviceable>
	</encoder>
	<transponder>
		<id-code>1200</id-code>
	</transponder>
    <filter-monitor>
        <test type="bool">0</test>
        <life n="0">0.1</life>
        <life n="1">0.1</life>
    </filter-monitor>
    </instrumentation>

    <nasal>
        <s76c>
            <file>Aircraft/Sikorsky-76C/Nasal/Electrical.nas</file>
            <!--file>Aircraft/Sikorsky-76C/Nasal/flightdirector.nas</file-->
            <file>Aircraft/Sikorsky-76C/Nasal/RTU4200.nas</file>
            <file>Aircraft/Sikorsky-76C/Nasal/registration.nas</file>
            <file>Aircraft/Sikorsky-76C/Nasal/S76C.nas</file>
            <file>Aircraft/Sikorsky-76C/Nasal/mk-S76C.nas</file>
            <file>Aircraft/Sikorsky-76C/Nasal/mk-tcas.nas</file>
        </s76c>
        <frw>
            <file>Aircraft/Sikorsky-76C/Nasal/mk-frw.nas</file>
        </frw>
        <m877>
            <file>Aircraft/Instruments-3d/clock/M877/M877.nas</file>
        </m877>
	    <dual_control_tools>
	     <file>Aircraft/Sikorsky-76C/Nasal/DualControl/dual-control-tools.nas</file>
	    </dual_control_tools>
	    <aircraft_dual_control>
	     <file>Aircraft/Sikorsky-76C/Nasal/DualControl/s76c-dual-control.nas</file>
	    </aircraft_dual_control>
	    <dual_control>
	     <file>Aircraft/Sikorsky-76C/Nasal/DualControl/pilot-dual-control.nas</file>
	    </dual_control>
    </nasal>
	
    <!-- Dual control depend on this value -->
    <dual-control>
      <active type="bool">0</active>
    </dual-control>

</PropertyList>
