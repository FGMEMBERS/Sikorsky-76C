<?xml version="1.0"?>
<!--Autopilot Controller-->

<PropertyList>

    <name>Alt hotspots</name>
    <w-base>80</w-base>
    <h-base>40</h-base>
    <w>80</w>
    <h>40</h>

    <layers>
    </layers>

    <actions>

<!--
        <action>
            <name>outline</name>
            <button>0</button>
            <x>-40</x>
            <y>-20</y>
            <w>80</w>
            <h>40</h>
        </action>
-->

        <action>
            <name>alt decrease 100</name>
            <button>0</button>
            <x>2</x>
            <y>-15</y>
            <w>10</w>
            <h>10</h>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/altitude-preset</property>
                <step>-100</step>
                <min>0</min>
                <max>18000</max>
                <wrap>false</wrap>
            </binding>
        </action>

        <action>
            <name>alt decrease 1000</name>
            <button>1</button>
            <x>2</x>
            <y>-15</y>
            <w>10</w>
            <h>10</h>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/altitude-preset</property>
                <step>-1000</step>
                <min>0</min>
                <max>18000</max>
                <wrap>false</wrap>
            </binding>
        </action>

        <action>
            <name>alt increase 100</name>
            <button>0</button>
            <x>22</x>
            <y>-15</y>
            <w>10</w>
            <h>10</h>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/altitude-preset</property>
                <step>100</step>
                <min>0</min>
                <max>18000</max>
                <wrap>false</wrap>
            </binding>
        </action>

        <action>
            <name>alt increase 1000</name>
            <button>1</button>
            <x>22</x>
            <y>-15</y>
            <w>10</w>
            <h>10</h>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/settings/altitude-preset</property> 
                <step>1000</step>
                <min>0</min>
                <max>18000</max>
                <wrap>false</wrap>
            </binding>
        </action>

        <action>
            <name>set altitude</name>
            <button>0</button>
            <x>12</x>
            <y>-15</y>
            <w>10</w>
            <h>10</h>
            <binding>
                <command>property-assign</command>
                <property>autopilot/settings/target-altitude-ft</property>
                <property>autopilot/settings/altitude-preset</property>
            </binding>
        </action>

    </actions>

</PropertyList>