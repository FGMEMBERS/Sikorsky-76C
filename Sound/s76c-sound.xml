<!-- S-76C sound config-->
<PropertyList>
    <fx>

        <turbine-start>
            <name>turbine on</name>
            <mode>once</mode>
            <path>Aircraft/Sikorsky-76C/Sound/s76-start.wav</path>
            <condition>
                <property>/engines/engine/running</property>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <offset>1.0</offset>
            </pitch>
        </turbine-start>

        <rotor>
            <name>main rotor</name>
            <mode>looped</mode>
            <path>Aircraft/Sikorsky-76C/Sound/s76-rotor.wav</path>
            <condition>
                <greater-than>
                <property>/rotors/main/rpm</property>
                <value>5</value>
                </greater-than>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <property>/rotors/main/rpm</property>
                <factor>0.002</factor>
                <offset>0.1</offset>
            </pitch>
        </rotor>

        <turbine-stop>
            <name>turbine off</name>
            <mode>once</mode>
            <path>Aircraft/Sikorsky-76C/Sound/s76-shutdown.wav</path>
            <condition>
                <not>
                    <property>/engines/engine/running</property>
                </not>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
                <min>0</min>
                <max>1.0</max>
            </volume>
            <pitch>
                <offset>1.0</offset>
            </pitch>
        </turbine-stop>

        <overspeed>
            <name>overspeed</name>
            <mode>looped</mode>
            <path>Sounds/overspeed.wav</path>
            <condition>
                <greater-than>
                <property>/velocities/airspeed-kt</property>
                <value>155</value>
                </greater-than>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Ovolume</property>
            </volume>
        </overspeed>

        <contact>
            <name>ground contact</name>
            <mode>once</mode>
            <path>Sounds/helicopter-skid.wav</path>
            <condition>
                <or>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                    <property>gear/gear[3]/wow</property>
                </or>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Cvolume</property>
            </volume>
            <volume>
                <factor>0.8</factor>
            </volume>
            <pitch>
                <factor>0.01</factor>
            </pitch>
            <reference-dist>5.0</reference-dist>
            <max-dist>10.0</max-dist>
        </contact>

        <wind>
            <name>wind</name>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <condition>
                <and>
                    <property>velocities/airspeed-kt</property>
                    <not>
                        <property>sim/crashed</property>
                    </not>
                </and>
            </condition>
            <volume>
                <property>/sim/sound/S76C/Cvolume</property>
            </volume>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0.1</min>
                <max>1.0</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.03</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.25</offset>
            </pitch>
            <reference-dist>10.0</reference-dist>
            <max-dist>20.0</max-dist>
        </wind>

        <crash>
            <name>intense ground contact</name>
            <mode>once</mode>
            <path>Sounds/crash.wav</path>
            <property>sim/crashed</property>
            <volume>
                <factor>1</factor>
            </volume>
            <pitch>
                <factor>0.1</factor>
            </pitch>
        </crash>

        <door>
            <name>close doors</name>
            <mode>once</mode>
            <path>Sounds/door_close.wav</path>
            <condition>
                <equals>
                    <property>controls/doors/rear</property>
                    <value>0</value>
                </equals>
            </condition>
            <volume>
                <factor>0.5</factor>
            </volume>
        </door>
    </fx>
</PropertyList>
