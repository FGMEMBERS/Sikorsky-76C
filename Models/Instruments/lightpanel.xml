<?xml version="1.0"?>
<PropertyList>

    <path>lightpanel.ac</path>
	<animation>
		<type>material</type>
		<object-name>lightknob</object-name>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.5</blue>
		</emission>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>lightknob</object-name>
		<property>sim/multiplay/generic/float[11]</property>
		<factor>180</factor>
		<center>
			<x-m> 0.0</x-m>
			<y-m>-0.001157</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>lightknob</object-name>
		<visible>true</visible>
		<action>
			<name>calibrate fine dec</name>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>	          
				<condition>
		            <not><property>devices/status/keyboard/shift</property></not>
		            <not><property>devices/status/keyboard/super</property></not>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>-0.1</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
			<binding>	          
				<condition>
		            <or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					</or>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>-0.5</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<name>calibrate fine inc</name>
			<button>1</button>
		<repeatable>true</repeatable>
			<binding>	          
				<condition>
		            <not><property>devices/status/keyboard/shift</property></not>
		            <not><property>devices/status/keyboard/super</property></not>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>0.1</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
			<binding>	          
				<condition>
		            <or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					</or>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>0.5</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<name>calibrate fine dec</name>
			<button>3</button>
		<repeatable>true</repeatable>
			<binding>	          
				<condition>
		            <not><property>devices/status/keyboard/shift</property></not>
		            <not><property>devices/status/keyboard/super</property></not>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>-0.1</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
			<binding>	          
				<condition>
		            <or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					</or>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>-0.5</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<name>calibrate fine inc</name>
			<button>4</button>
		<repeatable>true</repeatable>
			<binding>	          
				<condition>
		            <not><property>devices/status/keyboard/shift</property></not>
		            <not><property>devices/status/keyboard/super</property></not>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>0.1</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
			<binding>	          
				<condition>
		            <or>
						<property>devices/status/keyboard/shift</property>
						<property>devices/status/keyboard/super</property>
					</or>
		        </condition>
				<command>property-adjust</command>
				<property>sim/multiplay/generic/float[11]</property>
				<step>0.5</step>
				<min>0.0</min>
				<max>1.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

</PropertyList>